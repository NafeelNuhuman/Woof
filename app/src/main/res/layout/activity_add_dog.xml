<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:onClick="movePage"
    tools:context=".dogs.addDog">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="420dp"
        android:layout_height="62dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="213dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="@string/func_name"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etpetName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/reg_insert"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/Pet_Name"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@color/design_default_color_background"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/etpetBreed"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/reg_insert"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/Pet_Breed"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@color/design_default_color_background"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpetName" />

            <EditText
                android:id="@+id/etpetSize"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/reg_insert"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/Pet_size"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@color/design_default_color_background"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpetBreed" />

            <EditText
                android:id="@+id/etpetGender"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/reg_insert"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/Pet_Gender"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@color/design_default_color_background"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpetSize" />

            <EditText
                android:id="@+id/etpetAge"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/reg_insert"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/Pet_Age"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@color/design_default_color_background"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpetGender" />

            <EditText
                android:id="@+id/etpetVacc"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/reg_insert"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="Is your pet vaccinated?(Yes or No)"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@color/design_default_color_background"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpetAge" />

            <TextView
                android:id="@+id/editTextTextPersonName13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Add Image"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpetVacc" />

            <ImageView
                android:id="@+id/AddDog"
                android:layout_width="334dp"
                android:layout_height="283dp"
                android:layout_marginTop="15dp"
                android:onClick="ChooseDogImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName13"
                app:srcCompat="@drawable/ic_pet" />

            <Button
                android:id="@+id/confrmBtn"
                android:layout_width="228dp"
                android:layout_height="57dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/advnc_button"
                android:onClick="movePagetomanage"
                android:text="Confirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AddDog" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>